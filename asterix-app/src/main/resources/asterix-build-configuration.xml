<asterixConfiguration xmlns="asterixconf">
  <metadataNode>nc1</metadataNode>
  <store>
     <ncId>nc1</ncId>
     <storeDirs>nc1data</storeDirs> 
  </store>
  <store>
     <ncId>nc2</ncId>
     <storeDirs>nc2data</storeDirs> 
  </store>
  <transactionLogDir>
  	 <ncId>nc1</ncId>
  	 <txnLogDirPath>/tmp/txnLogDir/nc1</txnLogDirPath> 
  </transactionLogDir>
  <transactionLogDir>
  	 <ncId>nc2</ncId>
  	 <txnLogDirPath>/tmp/txnLogDir/nc2</txnLogDirPath> 
  </transactionLogDir>
  <property>
     <name>log.level</name>
     <value>WARNING</value>
     <description>Log level for running tests/build</description>
  </property>
  <property>
		<name>storage.memorycomponent.numpages</name>
		<value>8</value>
		<description>The number of pages to allocate for a memory component.
			(Default = 8)
		</description>
	</property>
  <property>
     <name>txn.log.groupcommitinterval</name>
     <value>1</value>
     <description>The group commit wait time in milliseconds.</description>
  </property>
</asterixConfiguration>
